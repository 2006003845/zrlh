<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/stage_bg_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="55px"
        android:src="@drawable/home_title_bg" />

    <com.zrong.view.DrawDynamicView
        android:id="@+id/stage_draw"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/stage_bottom_relat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12px" >

        <ImageView
            android:id="@+id/stage_btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12px"
            android:background="@drawable/bg_btn_store_selector"
            android:clickable="true"
            android:paddingTop="7px"
            android:scaleType="centerInside"
            android:src="@drawable/tv_help_selector" />

        <ImageView
            android:id="@+id/stage_btn_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7px"
            android:layout_toRightOf="@id/stage_btn_help"
            android:background="@drawable/bg_btn_store_selector"
            android:clickable="true"
            android:paddingTop="7px"
            android:scaleType="centerInside"
            android:src="@drawable/tv_about_selector" />

        <ImageView
            android:id="@+id/stage_btn_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:background="@drawable/bg_btn_store_selector"
            android:clickable="true"
            android:paddingTop="7px"
            android:scaleType="centerInside"
            android:src="@drawable/tv_music_selector" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/stage_btn_backhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5px"
        android:layout_marginTop="2px"
        android:background="@drawable/bg_btn_back_selector"
        android:clickable="true"
        android:paddingTop="7px"
        android:scaleType="centerInside"
        android:src="@drawable/tv_backmenu_selector" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/stage_bottom_relat"
        android:layout_below="@id/stage_bg_title" >

        <com.zrong.view.CoverFlow
            android:id="@+id/stage_gallery"
            android:layout_width="fill_parent"
            android:layout_height="180px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="130px"
            android:layout_marginRight="130px"
            android:spacing="15px" />

        <Button
            android:id="@+id/stage_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:background="@drawable/btn_arrow_left_selector" />

        <Button
            android:id="@+id/stage_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:background="@drawable/btn_arrow_right_selector" />
    </RelativeLayout>

</RelativeLayout>