<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg1" >

    <ImageView
        android:id="@+id/play_result_endless_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/bg2" />

    <LinearLayout
        android:id="@+id/play_result_endless_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/play_result_endless_money_tit"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_gravity="left"
            android:src="@drawable/tv_money" />

        <com.zrong.view.NumView
            android:id="@+id/play_result_endless_getwealthview"
            android:layout_width="120px"
            android:layout_height="70px"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_result_endless_linear_lastime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/play_result_endless_money"
        android:layout_alignLeft="@id/play_result_endless_money"
        android:layout_marginBottom="10px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/play_result_endless_holdtime_titl"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_gravity="left"
            android:src="@drawable/tv_holdtime" />

        <com.zrong.view.TimeView
            android:id="@+id/play_result_endless_timeview"
            android:layout_width="120px"
            android:layout_height="70px"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_result_linea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px" >

        <ImageView
            android:id="@+id/play_result_endless_btn_replay"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1.0"
            android:background="@drawable/bg_small_selector"
            android:clickable="true"
            android:padding="7px"
            android:scaleType="centerInside"
            android:src="@drawable/tv_replay_selector" />

        <TextView
            android:layout_width="50px"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/play_result_endless_btn_back"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1.0"
            android:background="@drawable/bg_small_selector"
            android:clickable="true"
            android:padding="7px"
            android:scaleType="centerInside"
            android:src="@drawable/tv_back_selector" />
    </LinearLayout>

    <ImageView
        android:id="@+id/play_result_endless_wealth_bg"
        android:layout_width="160px"
        android:layout_height="70px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2px"
        android:layout_marginTop="2px"
        android:src="@drawable/bg_gold" />

    <com.zrong.view.NumView
        android:id="@+id/play_result_endless_wealthview"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/play_result_endless_wealth_bg"
        android:layout_alignRight="@id/play_result_endless_wealth_bg"
        android:layout_alignTop="@id/play_result_endless_wealth_bg"
        android:layout_marginTop="30px" />

    <ImageView
        android:id="@+id/play_result_endless_btn_about"
        android:layout_width="100px"
        android:layout_height="74px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="3px"
        android:layout_marginLeft="2px"
        android:background="@drawable/bg_btn_store_selector"
        android:clickable="true"
        android:padding="7px"
        android:scaleType="centerInside"
        android:src="@drawable/tv_about_selector" />

</RelativeLayout>