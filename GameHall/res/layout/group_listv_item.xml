<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/group_listv_item_imgv"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/gameitem_default" />

        <Button
            android:id="@+id/group_listv_item_btn"
            style="@style/style_toptap_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dip"
            android:clickable="true"
            android:background="@drawable/bg_btn_green_selector"
            android:focusable="false"
            android:text="@string/join" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/group_listv_item_btn"
            android:layout_toRightOf="@id/group_listv_item_imgv"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/group_listv_item_name"
                style="@style/text_mid_black"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" >

                <TextView
                    style="@style/text_mid_black"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/member" />

                <TextView
                    style="@style/text_mid_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:text=":" />

                <TextView
                    android:id="@+id/group_listv_item_num"
                    style="@style/text_mid_black"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" >

                <TextView
                    style="@style/text_mid_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intro" />

                <TextView
                    style="@style/text_mid_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:text=":" />

                <TextView
                    android:id="@+id/group_listv_item_intro"
                    style="@style/text_mid_black"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>