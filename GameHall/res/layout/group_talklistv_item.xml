<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <!-- 头像 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip" >

        <ImageView
            android:id="@+id/weibo_item_icon"
            android:layout_width="70px"
            android:layout_height="70px"
            android:paddingBottom="8.0dip"
            android:paddingRight="8.0dip"
            android:src="@drawable/default_user" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- 顶部 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/group_talklistv_item_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="name"
                android:textColor="#FF202020"
                android:textSize="16.0sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/group_talklistv_item_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pic" />

            <TextView
                android:id="@+id/group_talklistv_item_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:text="2012-01-01"
                android:textColor="#FF666666"
                android:textSize="12.0sp" />
        </LinearLayout>
        <!-- 顶部 -->
        <!-- 正文 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.0dip"
            android:orientation="vertical"
            android:paddingLeft="5.0sp"
            android:paddingRight="5.0sp" >

            <TextView
                android:id="@+id/group_talklistv_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF414951"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/group_talklistv_item_content_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_pic_bg"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <TextView
                android:id="@+id/group_talklistv_item_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2012-01-01"
                android:textColor="#FF666666"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>