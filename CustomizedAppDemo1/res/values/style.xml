    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="style_top_tap">
        <item name="android:background">@drawable/bg_title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="style_top_txt">
       
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_top_btn">
        <item name="android:src">@drawable/btn_back_selector</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

