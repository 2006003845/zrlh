<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_shelf_image_left"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bookshelf_layer_left" />

    <ImageView
        android:id="@+id/item_shelf_image_right"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bookshelf_layer_right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_shelf_image_right"
        android:layout_toRightOf="@+id/item_shelf_image_left"
        android:background="@drawable/bookshelf_layer_center"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom" >

            <LinearLayout
                android:id="@+id/item_shelf_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cover"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/item_shelf_imgv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/item_shelf_tv1"
                    style="@style/text_small_gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天龙八部" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom" >

            <LinearLayout
                android:id="@+id/item_shelf_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cover"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/item_shelf_imgv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/item_shelf_tv2"
                    style="@style/text_small_gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天龙八部" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom" >

            <LinearLayout
                android:id="@+id/item_shelf_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cover"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/item_shelf_imgv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/item_shelf_tv3"
                    style="@style/text_small_gray_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天龙八部" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>