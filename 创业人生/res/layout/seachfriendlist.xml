<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
   android:background="@drawable/selectsever_backgroud"
  >
  
   <Button
   android:id="@+id/seachfriendlist_button_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
  />
  <Button
   android:id="@+id/seachfriendlist_button_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
  <Button
    android:id="@+id/seachfriendlist_button_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="玩家列表"
  	android:textColor="@color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  	android:layout_toRightOf="@id/seachfriendlist_button_returnback"
  	android:layout_toLeftOf="@id/seachfriendlist_button_cancel"
  /> 
  
  
   <ImageView
  android:id="@+id/seachfriendlist_scrollviewback"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_below="@id/seachfriendlist_button_title"
   
  android:layout_marginTop="5px"
  android:layout_marginLeft="5px"
  android:layout_marginRight="10px"
  android:layout_marginBottom="10px"
  
  android:layout_alignLeft="@id/seachfriendlist_button_returnback"
   android:layout_alignRight="@id/seachfriendlist_button_cancel"
  
  android:background="@drawable/selectsever_smallback"
  />
  <Button
  android:id="@+id/seachfriendlist_refresh"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerHorizontal="true"
  android:layout_alignBottom="@id/seachfriendlist_scrollviewback"
  android:background="@drawable/button_refresh"
  />
  <ListView
  android:id="@+id/seachfriendlist_listview"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/seachfriendlist_scrollviewback"
  android:layout_alignRight="@id/seachfriendlist_scrollviewback"
  android:layout_alignTop="@id/seachfriendlist_scrollviewback"
  android:layout_above="@id/seachfriendlist_refresh"
  android:cacheColorHint="#00000000"
  />
  
</RelativeLayout>
