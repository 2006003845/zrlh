<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/selectsever_backgroud" />

    <Button
        android:id="@+id/lottery_station_returnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:layout_marginTop="5px"
        android:background="@drawable/returnback_selector"
        android:visibility="invisible" />

    <Button
        android:id="@+id/chat_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5px"
        android:layout_marginTop="5px"
        android:background="@drawable/cancel_selector" />

    <Button
        android:id="@+id/chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/chat_button_cancel"
        android:layout_toRightOf="@id/lottery_station_returnback"
        android:background="@drawable/selectsever_titleback"
        android:focusable="false"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/chart_send"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/lottery_station_smallback"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/chat_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:layout_marginTop="10px"
        android:background="@drawable/selectsever_smallback"
        android:focusable="false" />

    <Button
        android:id="@+id/chat_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lottery_station_smallback"
        android:layout_alignRight="@id/lottery_station_smallback"
        android:layout_marginBottom="20px"
        android:layout_marginRight="15px"
        android:background="@drawable/button_frame"
        android:text="@string/dialog_ok"
        android:textColor="@color/white"
        android:textSize="18sp" />
