<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
 
  >
  <TextView 
  android:id="@+id/issued_number"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginLeft="75px"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  />
  <TextView 
  android:id="@+id/ticket_bet_number"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  android:layout_alignParentRight="true"
  android:layout_marginRight="75px"
  />
  <TextView 
  android:id="@+id/ticket_number"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  android:layout_toLeftOf="@+id/ticket_bet_number"
  android:layout_toRightOf="@+id/issued_number"
  android:layout_centerHorizontal="true"
  android:gravity="center_vertical|center_horizontal"
  />
 
  
    
</RelativeLayout>