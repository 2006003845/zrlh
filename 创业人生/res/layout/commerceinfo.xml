<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:clickable="true"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/selectsever_backgroud" 
  >
   <ImageView 
   android:id="@+id/imageview"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="@drawable/selectsever_backgroud" 
    />
 <Button
   android:id="@+id/commerceinfo_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
  />
  <Button
   android:id="@+id/commerceinfo_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
  <Button
    android:id="@+id/commerceinfo_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="商会"
  	android:textColor="@android:color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  	android:layout_toRightOf="@id/commerceinfo_returnback"
  	android:layout_toLeftOf="@id/commerceinfo_cancel"
  />  
  <ImageView
  android:id="@+id/commerceinfo_smallback"
  android:layout_centerHorizontal="true"
  android:layout_below="@id/commerceinfo_title"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginTop="5px"
  android:layout_marginLeft="50px"
  android:layout_marginRight="50px"
  android:layout_marginBottom="20px"
  android:background="@drawable/selectsever_smallback"
  android:focusable="false"
  /> 
  <Button 
      android:id="@+id/button_invisible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/commerceinfo_title"
      android:layout_marginTop="20px"
      android:layout_alignLeft="@id/commerceinfo_smallback"
	  android:layout_marginLeft="20px"
      android:visibility="invisible"
      />
  <ImageView 
  android:id="@+id/commerceinfo_logo"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@id/button_invisible"
  android:layout_marginLeft="30px"
  android:layout_below="@+id/commerceinfo_title"
  android:layout_marginTop="20px"
 
  />
  <TextView 
  android:id="@+id/commerceinfo_name"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/commerceinfo_title"
  android:layout_toRightOf="@+id/commerceinfo_logo"
  android:layout_marginLeft="50px"
  android:layout_marginTop="20px"
  android:text="名称"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  />
  <TextView 
  android:id="@+id/info_name"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/commerceinfo_title"
  android:layout_toRightOf="@+id/commerceinfo_name"
  android:layout_marginLeft="50px"
  android:layout_marginTop="20px"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  
 
  />
  <TextView 
  android:id="@+id/commerceinfo_rate"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/commerceinfo_name"
  android:layout_toRightOf="@+id/commerceinfo_logo"
  android:layout_marginLeft="50px"
  android:layout_marginTop="10px"
  android:text="等级"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  />
  <TextView 
  android:id="@+id/info_rate"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@+id/commerceinfo_rate"
  android:layout_below="@+id/info_name"
  android:layout_marginLeft="50px"
  android:layout_marginTop="10px"
  android:textColor="@android:color/black"
  android:textSize="20dp"
 
  />
  <TextView 
  android:id="@+id/commerceinfo_line"
  android:layout_width="wrap_content"
  android:layout_height="2px"
  android:layout_below="@+id/commerceinfo_rate"
  android:layout_alignLeft="@id/commerceinfo_smallback"
  android:layout_alignRight="@id/commerceinfo_smallback"
  android:layout_centerHorizontal="true"
  android:layout_marginTop="10px"
  android:background="@drawable/line"
  />
  <TextView 
  android:id="@+id/commerceinfo_notice"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerHorizontal="true"
  android:layout_below="@+id/commerceinfo_line"
  android:layout_marginTop="5px"
  android:text="商会公告"
  android:textColor="@android:color/black"
  android:textSize="20dp"
  
  />
  <LinearLayout
  android:id="@+id/commerceinfo_buttonlayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/commerceinfo_smallback"
  android:layout_alignRight="@id/commerceinfo_smallback"
  android:layout_alignBottom="@id/commerceinfo_smallback"
  android:layout_centerHorizontal="true"
  >
  
  <RelativeLayout
  android:id="@+id/commerceinfo_button_info_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/commerceinfo_button_info"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_information_pressed"
  />
  </RelativeLayout>
  
  
   <RelativeLayout
  android:id="@+id/commerceinfo_button_uper_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/commerceinfo_button_uper"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_uper"
  />
  </RelativeLayout>
  
  <RelativeLayout
  android:id="@+id/commerceinfo_button_member_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/commerceinfo_button_member"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_staff"
  />
  </RelativeLayout>
  
  <RelativeLayout
  android:id="@+id/commerceinfo_button_diary_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/commerceinfo_button_diary"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_diary"
  />
  </RelativeLayout>
  
  
  </LinearLayout>
  <ImageView 
  android:id="@+id/notice_detail"
  android:layout_centerHorizontal="true"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_below="@+id/commerceinfo_notice"
  android:layout_above="@+id/commerceinfo_buttonlayout"
  android:layout_marginTop="5px"
  android:layout_marginLeft="150px"
  android:layout_marginRight="150px"
  android:layout_marginBottom="5px"
  android:background="@drawable/selectsever_smallback"
  android:focusable="false"
  />
  <TextView 
  android:id="@+id/notice_text"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@+id/notice_detail"
  android:layout_alignTop="@+id/notice_detail"
  android:layout_alignRight="@+id/notice_detail"
  android:layout_alignBottom="@+id/notice_detail"
  android:gravity="center"
  android:singleLine="false"   
  android:scrollbars="vertical" 
  
  android:textColor="@android:color/black"
  android:textSize="20dp"
  
  />
 

    
</RelativeLayout>
