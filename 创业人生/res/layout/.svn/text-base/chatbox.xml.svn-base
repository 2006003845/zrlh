<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:clickable="true"
  android:background="@drawable/selectsever_backgroud"
  >
  
   <Button
   android:id="@+id/chatbox_button_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
  />
  <Button
   android:id="@+id/chatbox_button_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
  <Button
    android:id="@+id/chatbox_button_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="聊天"
  	android:textColor="@color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  	android:layout_toRightOf="@id/chatbox_button_returnback"
  	android:layout_toLeftOf="@id/chatbox_button_cancel"
  /> 
  
  
   <ImageView
  android:id="@+id/chatbox_scrollviewback"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_below="@id/chatbox_button_title"
  android:layout_marginTop="5px"
  android:layout_marginLeft="5px"
  android:layout_marginRight="10px"
  android:layout_marginBottom="10px"
  
  android:layout_alignLeft="@id/chatbox_button_returnback"
   android:layout_alignRight="@id/chatbox_button_cancel"
  
  android:background="@drawable/selectsever_smallback"
  />
  
   <LinearLayout
  android:id="@+id/chatbox_buttonlayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/chatbox_scrollviewback"
  android:layout_alignRight="@id/chatbox_scrollviewback"
  android:layout_alignBottom="@id/chatbox_scrollviewback"
  >
  
  <RelativeLayout
  android:id="@+id/chatbox_button_speech_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/chatbox_button_speech"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_speech"
  />
  </RelativeLayout>
  <RelativeLayout
  android:id="@+id/chatbox_button_all_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/chatbox_button_all"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_speech"
  />
  </RelativeLayout>
  <RelativeLayout
  android:id="@+id/chatbox_button_world_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/chatbox_button_world"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_world"
  />
  </RelativeLayout>
  <RelativeLayout
  android:id="@+id/chatbox_button_privatechat_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/chatbox_button_privatechat"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_privatechat"
  />
  </RelativeLayout>
  <RelativeLayout
  android:id="@+id/chatbox_button_system_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/chatbox_button_system"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:background="@drawable/button_system"
  />
  </RelativeLayout>
  </LinearLayout>
  
  <ListView
  android:id="@+id/chatbox_listview_all"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/chatbox_scrollviewback"
  android:layout_alignRight="@id/chatbox_scrollviewback"
  android:layout_alignTop="@id/chatbox_scrollviewback"
  android:layout_above="@id/chatbox_buttonlayout"
  android:visibility="gone"
   android:cacheColorHint="#00000000"
  >
  </ListView>
  <ListView
  android:id="@+id/chatbox_listview_world"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/chatbox_scrollviewback"
  android:layout_alignRight="@id/chatbox_scrollviewback"
  android:layout_alignTop="@id/chatbox_scrollviewback"
  android:layout_above="@id/chatbox_buttonlayout"
  android:visibility="gone"
   android:cacheColorHint="#00000000"
  >
  </ListView>
  <ListView
  android:id="@+id/chatbox_listview_privatechat"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/chatbox_scrollviewback"
  android:layout_alignRight="@id/chatbox_scrollviewback"
  android:layout_alignTop="@id/chatbox_scrollviewback"
  android:layout_above="@id/chatbox_buttonlayout"
  android:visibility="gone"
   android:cacheColorHint="#00000000"
  >
  </ListView>
  <ListView
  android:id="@+id/chatbox_listview_system"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/chatbox_scrollviewback"
  android:layout_alignRight="@id/chatbox_scrollviewback"
  android:layout_alignTop="@id/chatbox_scrollviewback"
  android:layout_above="@id/chatbox_buttonlayout"
  android:visibility="gone"
   android:cacheColorHint="#00000000"
  >
  </ListView>
  
</RelativeLayout>
