<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/selectsever_backgroud"
  android:clickable="true"
  >
  
  <Button
   android:id="@+id/shopinfo_button_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
  />
  <Button
   android:id="@+id/shopinfo_button_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
  <Button
    android:id="@+id/shopinfo_button_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="隐藏店铺信息"
  	android:textColor="@color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  	android:layout_toRightOf="@id/shopinfo_button_returnback"
  	android:layout_toLeftOf="@id/shopinfo_button_cancel"
  />
  
  <ImageView
  android:id="@+id/shopinfo_shopImageview"
  android:layout_width="250px"
  android:layout_height="250px" 
  android:layout_marginLeft="5px"
  android:layout_centerVertical="true"
  android:layout_alignParentLeft="true"
  
  />
    <Button 
  android:id="@+id/shopinfo_confirm"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentRight="true"
  android:layout_alignParentBottom="true"
  android:background="@drawable/planningdept_confirm"
  />

  <TextView 
    android:id="@+id/shopinfo_name"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/shopinfo_button_title"
  android:layout_toRightOf="@id/shopinfo_shopImageview"
  android:layout_marginLeft="5px"
  android:layout_marginTop="30dp"
  android:text="店铺名称："
  android:textSize="20dp"
  android:textColor="@color/black"
  />
  <TextView 
  android:id="@+id/shopinfo_name_text"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/shopinfo_button_title"
  android:layout_toRightOf="@id/shopinfo_name"
  android:layout_marginLeft="5px"
  android:layout_marginTop="30dp"
  android:text=""
  android:textSize="20dp"
  android:textColor="@color/black"
  />
   <TextView 
  android:id="@+id/shopinfo_point"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@id/shopinfo_name"
  android:layout_toRightOf="@id/shopinfo_shopImageview"
  android:layout_marginLeft="5px"

  android:layout_marginTop="10dp"
  android:text="所需创业点数："
  android:textSize="20dp"
  android:textColor="@color/black"
  />
  <TextView 
  android:id="@+id/shopinfo_point_text"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@id/shopinfo_name_text"
  android:layout_toRightOf="@id/shopinfo_point"
  android:layout_marginLeft="5px"

  android:layout_marginTop="10dp"
  android:text=""
  android:textSize="20dp"
  android:textColor="@color/black"
  />
 
  <TextView 
  android:id="@+id/shopinfo_desc"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@id/shopinfo_point"
  android:layout_toRightOf="@id/shopinfo_shopImageview"
  android:layout_marginLeft="5px"

  android:layout_marginTop="10dp"
  android:text="店铺描述："
  android:textSize="20dp"
  android:textColor="@color/black"
  />
  <TextView 
  android:id="@+id/shopinfo_desc_text"
  android:layout_width="300px"
  android:layout_height="300px"
  android:layout_below="@id/shopinfo_point_text"
  android:layout_toRightOf="@id/shopinfo_desc"
  android:layout_marginLeft="5px"

  android:layout_marginTop="10dp"
  android:text=""
  android:textSize="20dp"
  android:textColor="@color/black"
  android:scrollbars="none"
  />



	
	   
		
</RelativeLayout>
