<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/shoplist_selector" 
  android:descendantFocusability="blocksDescendants"
  >
  
  <ImageView
  android:id="@+id/recruitshop_item_hostile"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/hostile"
  android:layout_centerVertical="true"
  />
  
  <Button
  android:id="@+id/recruitshop_item_button"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/button_recruit"
  android:layout_alignParentRight="true"
  android:layout_centerVertical="true"
  />
  <RelativeLayout
  android:id="@+id/recruitshop_item_layout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@id/recruitshop_item_hostile"
  android:layout_toLeftOf="@id/recruitshop_item_button"
  >
  <TextView
  android:id="@+id/recruitshop_item_shopname"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="@color/black"
  android:textSize="20sp"
  />
  <TextView
  android:id="@+id/recruitshop_item_flow"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="@color/black"
  android:textSize="20sp"
  android:layout_alignParentRight="true"
  />
  <TextView
  android:id="@+id/recruitshop_item_companyname"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textColor="@color/black"
  android:textSize="20sp"
  android:layout_below="@id/recruitshop_item_shopname"
  />
  
  </RelativeLayout>
</RelativeLayout>
