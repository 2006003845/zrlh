<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:layout_centerHorizontal = "true" 
  android:clickable="true"
  android:background="@drawable/selectsever_backgroud"
  >
  
  <Button
   android:id="@+id/createshop_button_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
  />
  <Button
   android:id="@+id/createshop_button_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
  <Button
    android:id="@+id/createshop_button_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="创建店铺"
  	android:textColor="@color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  	android:layout_toRightOf="@id/createshop_button_returnback"
  	android:layout_toLeftOf="@id/createshop_button_cancel"
  /> 
  
  <Gallery
  android:id="@+id/createshop_gallery01"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@id/createshop_button_returnback"
  android:layout_toLeftOf="@id/createshop_button_cancel"
  android:layout_marginLeft="30px"
  android:layout_marginRight="30px"
  android:layout_below="@id/createshop_button_title"
  android:layout_marginTop="10px"
  android:spacing = "20px"
  android:clickable="true"
  android:focusable="true"
  /> 
  
  <LinearLayout
		android:id ="@+id/createshop_linearLayout"
		android:layout_below="@+id/createshop_gallery01"
		android:orientation="horizontal" 
		android:layout_marginTop="20px"
		android:layout_marginLeft="40px"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<TextView
		android:id = "@+id/createshop_buildingname"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:textColor="@color/black"
		android:gravity="left|center_vertical"
		android:text="店铺名称"
		/>
		<EditText
			android:id = "@+id/createshop_EditText_name"
			android:gravity="center_vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
		/>
		</LinearLayout> 
  
  
   <TextView
   android:id="@+id/createshop_radiotext"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:text="店铺类型"
   android:textSize="20sp"
   android:textColor="@color/black"
   android:gravity="center"
   android:layout_toRightOf="@id/createshop_button_returnback"
   android:layout_below="@id/createshop_linearLayout"
   android:layout_marginTop="15px"
   android:layout_marginLeft="50px"
   
   />
  <RadioGroup
  android:id="@+id/createshop_radiogroup"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_toRightOf="@id/createshop_radiotext"
  android:layout_marginLeft="5px" 
  android:layout_below="@id/createshop_linearLayout"
  android:layout_marginTop="5px"
  android:orientation="horizontal"
  >
 <RadioButton
  android:id="@+id/createshop_radiobutton_small"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="小型"
  android:textColor="@color/black"
  />
  <RadioButton
  android:id="@+id/createshop_radiobutton_mid"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="中型"
  android:textColor="@color/black"
  />
  <RadioButton
  android:id="@+id/createshop_radiobutton_big"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="大型"
  android:layout_gravity="right"
  android:textColor="@color/black"
  />
  </RadioGroup>	
   <Button
   android:id="@+id/createshop_button_create"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_alignParentBottom="true"
   android:layout_marginRight="5px"
   android:layout_marginBottom="5px"
   android:background="@drawable/confirm_selector"
  /> 
  
    <LinearLayout android:id="@+id/linearlayout_promotframe3"
   		android:layout_below="@id/createshop_button_title"
   		android:visibility="gone" 
   		android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/promotframe"
		android:layout_centerHorizontal="true"
		>
		<TextView android:id="@+id/promotFrame3" 
			android:layout_width="wrap_content"
			android:gravity="center" android:textColor="#000000"
			android:layout_gravity="center" android:textSize="20sp"
			android:layout_marginRight="10sp" android:layout_height="wrap_content" />
		<Button android:id="@+id/close_promotframe3" 
			android:background="@drawable/cancel_selector"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true" 
			android:layout_marginTop="22sp"
			android:layout_marginLeft="20sp" />
	</LinearLayout>
	
</RelativeLayout>

