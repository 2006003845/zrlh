   <com.zrong.Android.View.SpriteView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/employeelist_recruitment_arrows"
		android:layout_alignLeft="@id/employeelist_buttonlayout"
		android:layout_alignTop="@id/employeelist_buttonlayout"
		android:layout_marginLeft="17dip"
		resID="1391"
		android:visibility="gone"/>
		
	<LinearLayout android:id="@+id/linearlayout_promotframe5"
   		android:layout_below="@id/employeelist_button_title"
   		android:visibility="gone" 
   		android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/promotframe"
		android:layout_centerHorizontal="true"
		>
		<TextView android:id="@+id/promotFrame5" 
			android:layout_width="wrap_content"
			android:gravity="center" android:textColor="#000000"
			android:layout_gravity="center" android:textSize="20sp"
			android:text="@string/sharedcircle_text"
			android:layout_marginRight="10sp" android:layout_height="wrap_content" />
		<Button android:id="@+id/close_promotframe5" 
			android:background="@drawable/cancel_selector"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true" 
			android:layout_marginTop="22sp"
			android:layout_marginLeft="20sp" />
	</LinearLayout>		
		
