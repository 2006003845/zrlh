<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/selectsever_backgroud"
  >
  
  <Button
    android:id="@+id/employeelist_button_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="@string/employeelist_button_title"
  	android:textColor="@color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  /> 
  
  
   <ImageView
  android:id="@+id/employeelist_scrollviewback"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_below="@id/employeelist_button_title"
   
  
  android:layout_marginLeft="5px"
  android:layout_marginRight="10px"
  android:layout_marginBottom="10px"
  android:layout_centerHorizontal="true"
  android:background="@drawable/selectsever_smallback"
  />
    <Button
   android:id="@+id/employeelist_button_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
   android:visibility="invisible"
  />
  <Button
   android:id="@+id/employeelist_button_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
     <Button
  android:id="@+id/employeelist_layout_allselect"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/employeelist_scrollviewback"
  android:layout_alignTop="@id/employeelist_scrollviewback"
  android:background="@drawable/button_allselect"
  android:visibility="invisible"
  />
     <LinearLayout
  android:id="@+id/employeelist_buttonlayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/employeelist_scrollviewback"
  android:layout_alignRight="@id/employeelist_scrollviewback"
  android:layout_alignBottom="@id/employeelist_scrollviewback"
  >
  
  <RelativeLayout
  android:id="@+id/emp_button_look_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
  <Button
  android:id="@+id/emp_button_look"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:text="@string/employeelist_button_look"
  android:textSize="17sp"
  android:textColor="@color/white"
  android:background="@drawable/button_back"
  />
  </RelativeLayout>
  
  
   <RelativeLayout
  android:id="@+id/emp_button_routine_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/emp_button_routine"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:text="@string/employeelist_button_routine"
  android:textSize="17sp"
  android:textColor="@color/white"
  android:background="@drawable/button_back"
  />
  </RelativeLayout>
  
  <RelativeLayout
  android:id="@+id/emp_button_deploy_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/emp_button_deploy"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:text="@string/employeelist_button_deploy"
  android:textSize="17sp"
  android:textColor="@color/white"
  android:background="@drawable/button_back"
  />
  </RelativeLayout>
  
  <RelativeLayout
  android:id="@+id/emp_button_employ_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/emp_button_employ"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:text="@string/employeelist_button_employ"
  android:textSize="17sp"
  android:textColor="@color/white"
  android:background="@drawable/button_back"
  />
  </RelativeLayout>
  <!--  RelativeLayout
  android:id="@+id/emp_button_train_layout"
  android:layout_width="0px"
  android:layout_weight="1"
  android:layout_height="wrap_content"
  >
   <Button
  android:id="@+id/emp_button_train"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerInParent="true"
  android:text="@string/employeelist_button_train"
  android:textSize="17sp"
  android:textColor="@color/white"
  android:background="@drawable/button_back"
  />
  </RelativeLayout-->
  
  </LinearLayout>
   <ListView
  android:id="@+id/employeelist_listview"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/employeelist_scrollviewback"
  android:layout_alignRight="@id/employeelist_scrollviewback"
  android:layout_below="@id/employeelist_button_title"
  android:layout_above="@id/employeelist_buttonlayout"
  android:cacheColorHint="#00000000"
  android:scrollbars="none"
  />
