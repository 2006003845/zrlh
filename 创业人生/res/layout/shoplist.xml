    <LinearLayout
        android:id="@+id/linearlayout_promotframe6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoplist_button_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/promotframe"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/promotFrame6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:text="@string/sharedcircle_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/close_promotframe6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="22sp"
            android:background="@drawable/cancel_selector" />
    </LinearLayout>

</RelativeLayout>