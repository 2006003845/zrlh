  <Gallery 
  android:id="@+id/store_gallery"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@id/store_smallback"
  android:layout_alignRight="@id/store_smallback"
  android:layout_alignTop="@id/store_smallback"
  android:layout_marginLeft="20px"
  android:layout_marginRight="20px"
  android:layout_marginTop="30px"
  android:spacing="20px"
  android:clickable="true"
  android:focusable="true"
      />

  
  <Gallery 
  android:id="@+id/mygoods_gallery"
  android:layout_width="wrap_content"
