  <Button 
      android:id="@+id/store_delete"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentBottom="true"
      android:background="@drawable/button_frame"
      android:visibility="invisible"
      android:text="删除"
      />
  <Button 
      android:id="@+id/store_money"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="20dp"
      android:background="@drawable/money_frame"
      android:text="金钱："
      android:gravity="center"
      />
  <Button 
      android:id="@+id/store_use"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:background="@drawable/store_use"
      />
  <Button 
      android:id="@+id/store_buy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:background="@drawable/store_buy"
      />
  <TextView 
      android:id="@+id/mystore_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignLeft="@id/store_smallback"      
      android:layout_alignRight="@id/store_smallback"      
      android:layout_marginLeft="80dp"
      android:layout_marginRight="80dp"
      android:layout_alignBottom="@id/store_smallback"
      android:layout_marginBottom="20dp"
      android:gravity="center"
      android:background="@drawable/store_text"
      android:visibility="invisible"
