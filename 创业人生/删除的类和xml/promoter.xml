<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:clickable="true"
  
  >
   <ImageView 
  android:id="@+id/imageview"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/selectsever_backgroud"
  />
  
  <Button
   android:id="@+id/promoter_button_returnback"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/returnback_selector"
  />
  <Button
   android:id="@+id/promoter_button_cancel"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
   android:layout_marginRight="5px"
   android:layout_marginTop="5px"
   android:background="@drawable/cancel_selector"
  />
  <Button
    android:id="@+id/promoter_button_title"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:layout_centerHorizontal="true"
  	android:text="推广"
  	android:textColor="@color/black"
  	android:textSize="30dp"
  	android:gravity="center_horizontal|center_vertical"
  	android:background="@drawable/selectsever_titleback"
  	android:focusable="false"
  	android:layout_toRightOf="@id/promoter_button_returnback"
  	android:layout_toLeftOf="@id/promoter_button_cancel"
  /> 
   <ImageView
  android:id="@+id/promoter_smallback"
  android:layout_centerHorizontal="true"
  android:layout_below="@id/promoter_button_title"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_marginTop="5px"
  android:layout_marginLeft="20px"
  android:layout_marginRight="20px"
  android:layout_marginBottom="10px"
  android:background="@drawable/selectsever_smallback"
  android:focusable="false"
  />
  
  <TextView 
  android:id="@+id/address"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignTop="@+id/promoter_smallback"
  android:layout_alignLeft="@+id/promoter_smallback"
  android:layout_marginLeft="50dp"
  android:layout_marginTop="20dp"
  android:text="我的推广ID:"
  android:textColor="@color/black"
  android:textSize="20dp"
  
  />
  <TextView 
  android:id="@+id/promoter_address"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignTop="@+id/promoter_smallback"
  android:layout_toRightOf="@+id/address"
  android:layout_marginLeft="50dp"
  android:layout_marginTop="20dp"
  
  android:textColor="@color/black"
  android:textSize="20dp"
  
  />
  <TextView 
  android:id="@+id/promoter_line"
  android:layout_width="fill_parent"
  android:layout_height="1dp"
  android:layout_below="@+id/promoter_address"
  android:layout_marginTop="20dp"
  android:layout_alignLeft="@+id/promoter_smallback"
  android:layout_alignRight="@+id/promoter_smallback"
  android:background="@drawable/line"
  
  />
  <TextView 
  android:id="@+id/promoter_content"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/promoter_line"
  android:layout_alignLeft="@+id/promoter_smallback"
  android:layout_alignRight="@+id/promoter_smallback"
  android:layout_marginTop="30dp"
  android:layout_marginLeft="10dp"
  android:layout_marginRight="10dp"
  android:layout_centerHorizontal="true"
  android:layout_centerVertical="true"
  android:textColor="@color/black"
  android:textSize="20dp"
  
  
  />
  <Button 
  android:id="@+id/promoter_send"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@+id/promoter_smallback"
  android:layout_alignBottom="@+id/promoter_smallback"
  android:layout_marginLeft="10dp"
  android:layout_marginBottom="10dp"
  android:background="@drawable/office_promoter_send"
  />
  <Button 
  android:id="@+id/promoter_friend"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignRight="@+id/promoter_smallback"
  android:layout_alignBottom="@+id/promoter_smallback"
  android:layout_marginRight="10dp"
  android:layout_marginBottom="10dp"
  android:background="@drawable/office_promoter_friend"
  />
   
</RelativeLayout>