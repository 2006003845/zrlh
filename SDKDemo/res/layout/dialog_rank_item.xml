<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialog_rank_bg_item" >

        <TextView
            android:id="@+id/item_rank_score"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="top"
            android:text="1000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/item_rank_score"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_rank_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="3dp"
                android:gravity="center_horizontal"
                android:text="1"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/item_rank_head"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/llkc_icon" />

            <TextView
                android:id="@+id/item_rank_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="3dp"
                android:text="llkc"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>